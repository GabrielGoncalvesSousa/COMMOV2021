<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/occorenceItemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ocorenceCategoryBD"
            style="@style/word_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/ocorrences_expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/ocorrenceReciclerSubCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/reciclerViewLeftMargin"
                android:paddingLeft="@dimen/reciclerViewPadding"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingRight="1dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="SubCategory :" />

            <TextView
                android:id="@+id/ocorrenceReciclerSubCategoryBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/ocorrenceReciclerStreet"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="TextView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ocorrenceReciclerDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ocorrenceReciclerSubCategoryBD"
                android:layout_marginStart="230dp"
                android:layout_marginLeft="230dp"
                android:padding="@dimen/reciclerViewPadding"
                android:paddingLeft="@dimen/reciclerViewPadding"
                android:paddingRight="1dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="@string/textViewReciclerView_Date" />


            <TextView
                android:id="@+id/ocorrenceReciclerDateDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/ocorrenceReciclerDate"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="TextView"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/ocorrenceReciclerStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ocorrenceReciclerSubCategory"
                android:layout_marginLeft="@dimen/reciclerViewLeftMargin"
                android:paddingLeft="@dimen/reciclerViewPadding"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingRight="1dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="Street name: " />


            <TextView
                android:id="@+id/ocorrenceReciclerStreetBd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/ocorrenceReciclerStreet"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:layout_below="@id/ocorrenceReciclerSubCategory"
                android:text="TextView"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/ocorrenceReciclerPointOfReference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ocorrenceReciclerStreetBd"
                android:layout_marginLeft="@dimen/reciclerViewLeftMargin"
                android:paddingLeft="@dimen/reciclerViewPadding"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingRight="1dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="Point of reference: " />

            <TextView
                android:id="@+id/ocorrenceReciclerPointOfReferenceBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ocorrenceReciclerPointOfReference"
                android:layout_alignStart="@id/ocorrenceReciclerPointOfReference"
                android:layout_alignLeft="@id/ocorrenceReciclerPointOfReference"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:paddingTop="1dp"
                android:paddingEnd="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="TextView"
                android:textSize="12sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/ocorrenceReciclerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ocorrenceReciclerPointOfReferenceBD"
                android:layout_marginLeft="@dimen/reciclerViewLeftMargin"
                android:paddingLeft="@dimen/reciclerViewPadding"
                android:paddingTop="@dimen/reciclerViewPadding"
                android:paddingRight="1dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="Description" />

            <TextView
                android:id="@+id/ocorrenceReciclerDescriptionBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ocorrenceReciclerDescription"
                android:layout_alignStart="@id/ocorrenceReciclerDescription"
                android:layout_alignLeft="@id/ocorrenceReciclerDescription"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:paddingTop="1dp"
                android:paddingEnd="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="@dimen/reciclerViewPadding"
                android:text="TextView"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ocorrenceId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ocorrenceReciclerPointOfReference"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/ocorrenceReciclerPointOfReference"
                android:inputType="number"
                android:text="TextView"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gabriel.estg.cleancity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="gabriel.estg.cleancity.notes.database.NotesApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_transparent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_transparent"
        android:supportsRtl="true"
        android:theme="@style/Theme.CleanCity">
        <activity android:name=".HomePage"></activity>
        <activity android:name=".notes.EditNoteActivity" />
        <activity android:name=".notes.AddNoteActivity" />
        <activity
            android:name=".notes.NotesActivity"
            android:theme="@style/Theme.CleanCity.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>